<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView app:cardElevation="10dp"
    android:id="@+id/cardview"
    app:cardCornerRadius="10dp"
    android:layout_margin="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
   <LinearLayout
       android:weightSum="8"
       android:layout_width="match_parent"
       android:layout_height="wrap_content" >
       <ImageView
           android:id="@+id/item_img"
           android:layout_weight="1"
           android:src="@drawable/men"
           android:layout_width="80dp"
           android:layout_height="80dp"/>

       <LinearLayout
           android:weightSum="6"
           android:orientation="horizontal"
           android:layout_width="200dp"
           android:layout_height="wrap_content">

           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <TextView
                   android:id="@+id/item_ten"
                   android:text="Ten cau thu"
                   android:textSize="20sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <TextView
                   android:id="@+id/item_NgaySinh"
                   android:text="Ngay Sinh"
                   android:textSize="20sp"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>



           <LinearLayout
               android:orientation="vertical"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content">
               <CheckBox
                   android:id="@+id/item_tiendao"
                   android:text="tien dao"
                   android:enabled="false"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <CheckBox
                   android:id="@+id/item_tienve"
                   android:enabled="false"
                   android:text="tien ve"

                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
               <CheckBox
                   android:id="@+id/item_hauve"
                   android:enabled="false"
                   android:text="hau ve"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"/>
           </LinearLayout>



       </LinearLayout>

       <Button
           android:layout_weight="1"
           android:id="@+id/btnXoa"
           android:text="Xoa"
           android:background="@color/colorPrimary"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"/>


   </LinearLayout>
</androidx.cardview.widget.CardView>